<label>Sender Name</label>
<input id='n' placeholder='Raju Kumar'>

<label>Amount (₹)</label>
<input id='a' type='number' placeholder='150'>

<button onclick="speak()">Speak Hindi + English</button>

<script>
function speak(){
let n=document.getElementById('n').value||'Sender';
let a=document.getElementById('a').value||'0';

let h='₹'+a+' praapt hua '+n+' se';
let e='You received rupees '+a+' from '+n;

function sp(t,l){
let u=new SpeechSynthesisUtterance(t);
u.lang=l;
speechSynthesis.speak(u);
}

sp(h,'hi-IN');
setTimeout(()=>sp(e,'en-US'),1200);
}
</script>
